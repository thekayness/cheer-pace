<h1><%@course.course_title%></h1>
    <%@course.tasks.each do |task|%>
        <%= form_for(@course) do |f| %>
          <%=f.fields_for :tasks do |t|%>
            <%=t.label :title%>
            <h4><%=task.title%></h4>
            <%=t.label :description%>
            <h4><%=task.description%></h4>
            <%=t.label :goal_date%>
            <h4><%=task.goal_date%></h4>
            <%=t.label "Mark Task Complete"%>
            <%= t.check_box '_destroy' %>
            <br>
            <br>
          <%end%>
      <br>
      <br>
      <%= f.submit %>
      <%end%>
    <%end%>
      <%= form_tag("/courses/#{@course.id}/edit", method: "get") do %>
      <label>How many tasks do you need to create?</label>
        <%=number_field_tag 'new_tasks', max: 15%>
        <%= submit_tag("Create Tasks for this Course") %>
      <%end%>
      <%= link_to "Update tasks for this course", edit_course_path(@course)%>

